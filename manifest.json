{
    "name": "URL-shortener",
    "version": "1.0",
    "description": "Shorten urls with Bitly",
    "permissions":[
		"tabs",
		"activeTab",
		"clipboardWrite",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
    "background": {
      "scripts": ["app/scripts/background.js"]
    },
    "options_ui": {
      "page": "app/options.html"
    },
    "icons": {
        "16": "logo.png",
        "32": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "browser_action": {
      "default_icon":
      {
        "16": "logo.png",
        "32": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
      },
      "default_title": "URL-shortener",
      "default_popup": "app/popup.html"
    },
    "manifest_version": 2
}